<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.rackdon.com.securitycam.ConfigurationActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Url"
        android:id="@+id/url"
        android:onClick="setUrl"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/notifications"
        android:layout_alignLeft="@+id/notifications"
        android:layout_alignStart="@+id/notifications"
        android:layout_alignRight="@+id/notifications"
        android:layout_alignEnd="@+id/notifications" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/notifications"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset database"
        android:id="@+id/resetDDBB"
        android:onClick="resetDB"
        android:layout_below="@+id/notifications"
        android:layout_marginTop="61dp"
        android:layout_alignLeft="@+id/notifications"
        android:layout_alignStart="@+id/notifications"
        android:layout_alignRight="@+id/notifications"
        android:layout_alignEnd="@+id/notifications" />

</RelativeLayout>
