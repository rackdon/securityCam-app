<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.rackdon.com.securitycam.ConfigurationActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Url"
        android:id="@+id/url"
        android:layout_alignParentTop="true"
        android:layout_marginTop="96dp"
        android:layout_alignLeft="@+id/resetDDBB"
        android:layout_alignStart="@+id/resetDDBB"
        android:layout_alignRight="@+id/resetDDBB"
        android:layout_alignEnd="@+id/resetDDBB"
        android:onClick="setUrl"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/notifications"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/resetDDBB"
        android:layout_alignStart="@+id/resetDDBB"
        android:layout_alignRight="@+id/resetDDBB"
        android:layout_alignEnd="@+id/resetDDBB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset database"
        android:id="@+id/resetDDBB"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp" />

</RelativeLayout>
